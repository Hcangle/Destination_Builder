
<%= form_for direction, url: url do |f| %>
    <%= f.label :Duration %> 
    <%= f.number_field  :duration %> Hours
    
    <%= f.label :Directions %>
    <%= f.text_area :variation %>
    
    <%= f.hidden_field :route_id, value: @route.id %>
    <%= f.collection_select :id, Destination.all, :id, :location %>
    
    <%= f.submit %>
<% end %>

